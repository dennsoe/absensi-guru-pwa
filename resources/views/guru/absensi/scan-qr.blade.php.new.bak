@push('scripts')
    {{-- HTML5 QR Code Library --}}
    <script src="https://unpkg.com/html5-qrcode"></script>

    <script>
        let html5QrcodeScanner = null;
        let isScanning = false;
        let userLocation = null;
        let isProcessing = false;

        // Configuration GPS
        const GPS_CONFIG = {
            SEKOLAH_LAT: -7.797068, // GANTI dengan koordinat sekolah yang sebenarnya
            SEKOLAH_LNG: 110.370529, // GANTI dengan koordinat sekolah yang sebenarnya
            RADIUS_METER: 200
        };

        // Get User Location dengan GPS
        async function getUserLocation() {
            return new Promise((resolve, reject) => {
                if (!navigator.geolocation) {
                    reject(new Error('GPS tidak didukung oleh browser Anda'));
                    return;
                }

                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        resolve({
                            latitude: position.coords.latitude,
                            longitude: position.coords.longitude,
                            accuracy: position.coords.accuracy
                        });
                    },
                    (error) => {
                        let errorMsg = 'Gagal mendapatkan lokasi';
                        switch (error.code) {
                            case error.PERMISSION_DENIED:
                                errorMsg = 'Izin lokasi ditolak. Aktifkan izin lokasi di browser.';
                                break;
                            case error.POSITION_UNAVAILABLE:
                                errorMsg = 'Informasi lokasi tidak tersedia.';
                                break;
                            case error.TIMEOUT:
                                errorMsg = 'Permintaan lokasi timeout.';
                                break;
                        }
                        reject(new Error(errorMsg));
                    }, {
                        enableHighAccuracy: true,
                        timeout: 15000,
                        maximumAge: 0
                    }
                );
            });
        }

        // Calculate Distance menggunakan Haversine Formula
        function calculateDistance(lat1, lon1, lat2, lon2) {
            const R = 6371e3; // Earth radius in meters
            const φ1 = lat1 * Math.PI / 180;
            const φ2 = lat2 * Math.PI / 180;
            const Δφ = (lat2 - lat1) * Math.PI / 180;
            const Δλ = (lon2 - lon1) * Math.PI / 180;

            const a = Math.sin(Δφ / 2) * Math.sin(Δφ / 2) +
                Math.cos(φ1) * Math.cos(φ2) *
                Math.sin(Δλ / 2) * Math.sin(Δλ / 2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));

            return R * c; // Distance in meters
        }

        // Initialize GPS
        async function initGPS() {
            const statusDiv = document.getElementById('gpsStatus');

            try {
                userLocation = await getUserLocation();

                const distance = calculateDistance(
                    userLocation.latitude,
                    userLocation.longitude,
                    GPS_CONFIG.SEKOLAH_LAT,
                    GPS_CONFIG.SEKOLAH_LNG
                );

                const isValidLocation = distance <= GPS_CONFIG.RADIUS_METER;

                statusDiv.innerHTML = `
                    <div class="text-${isValidLocation ? 'success' : 'danger'}">
                        <i class="bi bi-${isValidLocation ? 'check' : 'x'}-circle-fill" style="font-size: 2.5rem;"></i>
                        <h6 class="mt-3 mb-2">${isValidLocation ? 'Lokasi Valid ✓' : 'Lokasi Terlalu Jauh!'}</h6>
                        <div class="text-start small">
                            <p class="mb-1"><strong>Latitude:</strong> ${userLocation.latitude.toFixed(6)}</p>
                            <p class="mb-1"><strong>Longitude:</strong> ${userLocation.longitude.toFixed(6)}</p>
                            <p class="mb-1"><strong>Akurasi:</strong> ±${Math.round(userLocation.accuracy)}m</p>
                            <p class="mb-0 ${isValidLocation ? 'text-success' : 'text-danger'}">
                                <strong>Jarak dari sekolah:</strong> ${Math.round(distance)}m
                                ${isValidLocation ? '(OK)' : `(Maks: ${GPS_CONFIG.RADIUS_METER}m)`}
                            </p>
                        </div>
                    </div>
                `;

                if (!isValidLocation) {
                    showAlert(
                        `Anda berada ${Math.round(distance)}m dari sekolah. Harap mendekat ke area sekolah (maksimal ${GPS_CONFIG.RADIUS_METER}m).`,
                        'danger');
                    document.getElementById('startBtn').disabled = true;
                }

            } catch (error) {
                console.error('GPS Error:', error);
                statusDiv.innerHTML = `
                    <div class="text-danger">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 2.5rem;"></i>
                        <h6 class="mt-3 mb-2">GPS Tidak Aktif!</h6>
                        <p class="small mb-0">${error.message}</p>
                    </div>
                `;
                showAlert('GPS tidak aktif atau izin lokasi ditolak. Pastikan GPS aktif dan izin lokasi diberikan.',
                    'danger');
                document.getElementById('startBtn').disabled = true;
            }
        }

        // Show Alert
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show border-start border-${type} border-4`;
            alertDiv.innerHTML = `
                <i class="bi bi-${type === 'success' ? 'check-circle' : type === 'danger' ? 'x-circle' : 'info-circle'}-fill me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            const container = document.getElementById('alertContainer');
            container.appendChild(alertDiv);

            // Auto dismiss after 7 seconds
            setTimeout(() => {
                alertDiv.remove();
            }, 7000);
        }

        // Update Camera Status
        function updateCameraStatus(active) {
            const statusDiv = document.getElementById('cameraStatus');
            if (active) {
                statusDiv.innerHTML = `
                    <i class="bi bi-camera-video-fill text-success" style="font-size: 2.5rem;"></i>
                    <h6 class="text-success mt-3 mb-1">Kamera Aktif</h6>
                    <p class="small text-muted mb-0">Arahkan ke QR Code</p>
                `;
            } else {
                statusDiv.innerHTML = `
                    <i class="bi bi-camera-video-off text-muted" style="font-size: 2.5rem;"></i>
                    <p class="text-muted mb-0 mt-2 small">Kamera belum aktif</p>
                `;
            }
        }

        // Update Scan Result Display
        function updateScanResult(success, data = null, message = '') {
            const resultDiv = document.getElementById('scanResult');

            if (success && data) {
                resultDiv.innerHTML = `
                    <div class="text-success">
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 mb-2 fw-bold">Absensi Berhasil!</h5>
                        <p class="mb-1"><strong>${data.mata_pelajaran || 'Mata Pelajaran'}</strong></p>
                        <p class="mb-1 small text-muted">Kelas ${data.kelas || '-'}</p>
                        <p class="mt-2 mb-0">
                            <span class="badge bg-success">${data.status_text || 'Hadir'}</span>
                        </p>
                    </div>
                `;

                // Reset after 5 seconds
                setTimeout(() => {
                    resultDiv.innerHTML = `
                        <i class="bi bi-qr-code text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mb-0 mt-2 small">Siap scan ulang</p>
                    `;
                }, 5000);

            } else if (!success) {
                resultDiv.innerHTML = `
                    <div class="text-danger">
                        <i class="bi bi-x-circle-fill" style="font-size: 3rem;"></i>
                        <h6 class="mt-3 mb-2">Scan Gagal!</h6>
                        <p class="small text-muted mb-0">${message || 'QR Code tidak valid'}</p>
                    </div>
                `;

                // Reset after 4 seconds
                setTimeout(() => {
                    resultDiv.innerHTML = `
                        <i class="bi bi-qr-code text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mb-0 mt-2 small">Belum ada hasil scan</p>
                    `;
                }, 4000);
            }
        }

        // Process QR Code
        async function processQRCode(decodedText) {
            // Prevent multiple processing
            if (isProcessing) {
                console.log('Already processing...');
                return;
            }

            isProcessing = true;

            try {
                // Validate GPS first
                if (!userLocation) {
                    showAlert('GPS belum aktif. Mohon tunggu deteksi GPS selesai.', 'warning');
                    isProcessing = false;
                    return;
                }

                // Show processing
                updateScanResult(false, null, 'Memproses...');

                // Send to server
                const response = await fetch('{{ route('absensi.scan-qr.proses') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': '{{ csrf_token() }}',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        qr_code: decodedText,
                        latitude: userLocation.latitude,
                        longitude: userLocation.longitude
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showAlert(result.message || 'Absensi berhasil dicatat!', 'success');
                    updateScanResult(true, result.data);
                    loadRiwayat(); // Refresh history

                    // Stop scanner after success
                    setTimeout(() => {
                        stopScanner();
                    }, 2000);
                } else {
                    showAlert(result.message || 'Gagal mencatat absensi', 'danger');
                    updateScanResult(false, null, result.message);
                }

            } catch (error) {
                console.error('Error processing QR Code:', error);
                showAlert('Gagal memproses QR Code: ' + error.message, 'danger');
                updateScanResult(false, null, 'Error memproses QR');
            } finally {
                isProcessing = false;
            }
        }

        // Start Scanner
        function startScanner() {
            if (isScanning) return;

            html5QrcodeScanner = new Html5Qrcode("reader");

            html5QrcodeScanner.start({
                    facingMode: "environment"
                }, // Use back camera
                {
                    fps: 10,
                    qrbox: {
                        width: 250,
                        height: 250
                    },
                    aspectRatio: 1.0
                },
                (decodedText, decodedResult) => {
                    // QR Code detected
                    console.log('QR Detected:', decodedText);
                    processQRCode(decodedText);
                },
                (errorMessage) => {
                    // Scanning error (normal, ignore)
                }
            ).then(() => {
                isScanning = true;
                updateCameraStatus(true);
                document.getElementById('startBtn').classList.add('d-none');
                document.getElementById('stopBtn').classList.remove('d-none');
            }).catch(err => {
                console.error('Error starting scanner:', err);
                showAlert('Gagal mengaktifkan kamera. Pastikan izin kamera diberikan.', 'danger');
            });
        }

        // Stop Scanner
        function stopScanner() {
            if (!isScanning || !html5QrcodeScanner) return;

            html5QrcodeScanner.stop().then(() => {
                isScanning = false;
                updateCameraStatus(false);
                document.getElementById('startBtn').classList.remove('d-none');
                document.getElementById('stopBtn').classList.add('d-none');
            }).catch(err => {
                console.error('Error stopping scanner:', err);
            });
        }

        // Load Riwayat Absensi Hari Ini
        async function loadRiwayat() {
            try {
                const response = await fetch('{{ route('guru.absensi.riwayat') }}');
                const data = await response.json();

                const tbody = document.getElementById('riwayatTable');

                if (!data || data.length === 0) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox"></i> Belum ada riwayat absensi hari ini
                            </td>
                        </tr>
                    `;
                    return;
                }

                let html = '';
                data.forEach(item => {
                    const statusClass = item.status_kehadiran === 'hadir' ? 'success' :
                        item.status_kehadiran === 'terlambat' ? 'warning' : 'danger';
                    const statusText = item.status_kehadiran === 'hadir' ? 'Hadir' :
                        item.status_kehadiran === 'terlambat' ? 'Terlambat' : item.status_kehadiran;
                    const metodeIcon = item.metode_absensi === 'qr_code' ? 'qr-code' : 'camera';

                    html += `
                        <tr>
                            <td class="px-4">${item.jam_masuk || '-'}</td>
                            <td>${item.jadwal?.mata_pelajaran?.nama_mapel || '-'}</td>
                            <td>${item.jadwal?.kelas?.nama_kelas || '-'}</td>
                            <td><span class="badge bg-${statusClass}">${statusText}</span></td>
                            <td><i class="bi bi-${metodeIcon}"></i> ${item.metode_absensi || '-'}</td>
                        </tr>
                    `;
                });

                tbody.innerHTML = html;
            } catch (error) {
                console.error('Error loading riwayat:', error);
                document.getElementById('riwayatTable').innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center py-4 text-danger">
                            <i class="bi bi-exclamation-triangle"></i> Gagal memuat riwayat
                        </td>
                    </tr>
                `;
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Init GPS
            initGPS();

            // Load Riwayat
            loadRiwayat();

            // Button handlers
            document.getElementById('startBtn').addEventListener('click', startScanner);
            document.getElementById('stopBtn').addEventListener('click', stopScanner);
        });

        // Cleanup on page unload
        window.addEventListener('beforeunload', function() {
            if (isScanning && html5QrcodeScanner) {
                stopScanner();
            }
        });
    </script>
@endpush
